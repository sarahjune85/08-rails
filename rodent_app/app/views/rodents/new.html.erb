<h1>New rodent</h1>


<form action="<%= rodents_path %>" method="post">

<label>
<span class="label-name">Name:</span> 
<input type="text" name="name" required>
</label><br>

<label>
<span class="label-name">Family:</span> 
<input type="text" name="family">
</label><br>

<label>
<span class="label-name">Lifespan:</span> 
<input type="number" name="lifespan">
</label><br>

<label>
<span class="label-name">Diet:</span> 
<input type="text" name="diet">
</label><br>

<label>
<span class="label-name">Image:</span> 
<input type="url" name="image">
</label><br>

<button>Submit</button>
</form>